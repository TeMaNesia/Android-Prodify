<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/medium_gap"
    app:cardCornerRadius="@dimen/radius_small"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/component_card_blue_border">

        <TextView
            android:id="@+id/tv_status_pill"
            android:background="@drawable/component_pill_blue_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/title_nama_lengkap"
            android:textSize="@dimen/font_size_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_lamaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_nama_lengkap"
            android:textSize="@dimen/font_size_big"
            app:layout_constraintStart_toStartOf="@id/tv_status_pill"
            app:layout_constraintTop_toBottomOf="@id/tv_status_pill" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_tanggal"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_size_small"
            app:layout_constraintStart_toStartOf="@+id/tv_title_lamaran"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_lamaran" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>