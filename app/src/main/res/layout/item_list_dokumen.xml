<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_gap"
    android:background="@drawable/component_card_dark_grey_border">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_dokumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pdf_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dokumen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_gap"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/title_penyelenggara"
        app:layout_constraintBottom_toTopOf="@id/tv_dokumen_description"
        app:layout_constraintStart_toEndOf="@+id/iv_dokumen"
        app:layout_constraintTop_toTopOf="@+id/iv_dokumen" />

    <TextView
        android:id="@+id/tv_dokumen_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/deskripsi_dokumen"
        android:textSize="@dimen/font_size_small"

        app:layout_constraintBottom_toBottomOf="@+id/iv_dokumen"
        app:layout_constraintStart_toStartOf="@+id/tv_dokumen_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_dokumen_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
