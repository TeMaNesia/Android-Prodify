<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailDiscussActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/add_comment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_profile_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:minHeight="50dp"
                    android:src="@drawable/raw_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/name_jurusan_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@id/img_profile_avatar"
                    app:layout_constraintStart_toEndOf="@id/img_profile_avatar"
                    app:layout_constraintTop_toTopOf="@id/img_profile_avatar">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/title_nama_lengkap"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_medium" />

                    <TextView
                        android:id="@+id/tv_jurusan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/title_kampus_sekolah"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_size_normal" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/title_notification"
                    android:src="@drawable/ic_bell"
                    app:layout_constraintBottom_toBottomOf="@id/img_profile_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/img_profile_avatar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/radius_small"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/component_card_dark_grey_border"
                    android:padding="12dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/raw_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    <TextView
                        android:id="@+id/nama_lengkap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/title_nama_lengkap"
                        android:textSize="@dimen/font_size_medium"
                        app:layout_constraintStart_toEndOf="@+id/img_avatar"
                        app:layout_constraintTop_toTopOf="@+id/img_avatar" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="4h"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_size_normal"
                        app:layout_constraintStart_toEndOf="@+id/img_avatar"
                        app:layout_constraintTop_toBottomOf="@+id/nama_lengkap" />

                    <LinearLayout
                        android:id="@+id/tags_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_avatar">

                        <TextView
                            android:id="@+id/tv_tag_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/component_pill_blue_bg"
                            android:fontFamily="@font/poppins_medium"
                            android:text="#Tag1"
                            android:textColor="@color/blue100"
                            android:textSize="@dimen/font_size_normal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/img_avatar" />

                        <TextView
                            android:id="@+id/tv_tag_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/component_pill_blue_bg"
                            android:fontFamily="@font/poppins_medium"
                            android:text="#Tag2"
                            android:textColor="@color/blue100"
                            android:textSize="@dimen/font_size_normal"
                            app:layout_constraintStart_toEndOf="@id/tv_tag_1"
                            app:layout_constraintTop_toBottomOf="@+id/img_avatar" />

                        <TextView
                            android:id="@+id/tv_tag_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/component_pill_blue_bg"
                            android:fontFamily="@font/poppins_medium"
                            android:text="#Tag3"
                            android:textColor="@color/blue100"
                            android:textSize="@dimen/font_size_normal"
                            app:layout_constraintStart_toEndOf="@id/tv_tag_2"
                            app:layout_constraintTop_toBottomOf="@+id/img_avatar" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/lorem_ipsum_12_words"
                        android:textSize="@dimen/font_size_medium"
                        app:layout_constraintStart_toStartOf="@+id/tags_container"
                        app:layout_constraintTop_toBottomOf="@+id/tags_container" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/lorem_ipsum_32_words"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/font_size_normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_description">

                        <ImageView
                            android:id="@+id/btn_upvote"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/upvote_desc"
                            android:src="@drawable/ic_upvote" />

                        <TextView
                            android:id="@+id/text_upvote_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/text_count_upvote"
                            android:textColor="@color/blue100"
                            android:textSize="@dimen/font_size_medium" />

                        <ImageView
                            android:id="@+id/btn_downvote"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/downVote_desc"
                            android:src="@drawable/ic_down_vote" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="end">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/downVote_desc"
                                android:src="@drawable/ic_discuss" />

                            <TextView
                                android:id="@+id/text_comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="503"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/font_size_medium" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Komentar"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_comment" />

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/component_search_bg"
            android:includeFontPadding="false"
            android:paddingVertical="10dp"
            android:paddingStart="14dp"
            android:paddingEnd="36dp"
            android:hint="Buat Komentar Disini ..."
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/font_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_send"
            app:layout_constraintBottom_toBottomOf="@+id/edt_comment"
            app:layout_constraintEnd_toEndOf="@+id/edt_comment"
            app:tint="@color/blue100" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>