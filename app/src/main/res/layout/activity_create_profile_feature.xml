<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.CreateProfileFeatureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:src="@drawable/round_arrow_back_ios_24"
                android:background="@drawable/bg_circle_btn_light_gray"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Tambah Fitur"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:fontFamily="@font/poppins_bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:hint="Tulis Title Disini..."
            android:textSize="@dimen/font_size_normal"
            android:inputType="text"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sub Title"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edt_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:hint="Tulis Sub Title Disini..."
            android:textSize="@dimen/font_size_normal"
            android:inputType="text"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:hint="Tulis Description Disini..."
            android:textSize="@dimen/font_size_normal"
            android:inputType="textMultiLine"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_start_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bulan Mulai (Opsional)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <Spinner
            android:id="@+id/edt_start_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:textSize="@dimen/font_size_normal"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_start_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tahun Mulai (Opsional)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edt_start_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:hint="Tulis Tahun Mulai Disini..."
            android:textSize="@dimen/font_size_normal"
            android:inputType="number"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_end_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bulan Selesai (Opsional)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <Spinner
            android:id="@+id/edt_end_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:textSize="@dimen/font_size_normal"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_end_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tahun Selesai (Opsional)"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_medium"
            android:fontFamily="@font/poppins_medium"/>

        <EditText
            android:id="@+id/edt_end_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_rounded_light_gray"
            android:hint="Tulis Tahun Selesai Disini..."
            android:textSize="@dimen/font_size_normal"
            android:inputType="number"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Simpan"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/bg_btn_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_buat_curriculum_vite"
            app:layout_constraintTop_toTopOf="@id/btn_buat_curriculum_vite" />



    </LinearLayout>

</ScrollView>